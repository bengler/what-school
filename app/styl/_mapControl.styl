.mapControl.content
  position: relative
  margin-top: 0px

.leaflet-container 
  a
    text-decoration: underline
  p
    margin: 2px 0px
  h2
    margin: 4px 0px

#map 
  height: 500px


  @media (max-width: 320px)
    height: 350px

  svg
    path
      fill: #fff
      fill-opacity: 0.4
      stroke: #448
      stroke-width: 1.1px
      stroke-dasharray: 8,4
