.mapControl
  h2
    margin-bottom: 20px

.leaflet-container 
  a
    text-decoration: underline!important
  p
    margin: 2px 0px
  h2
    margin: 4px 0px
    font-weight: 800

#map 
  height: 700px
  margin-top: 10px  
  margin-bottom: 20px
  border-top: 2px solid darken($colBackground, 20%)
  border-bottom: 2px solid darken($colBackground, 20%)

  @media (max-width: 360px)
    height: 340px

  svg
    path
      fill: none
      stroke: #000
      stroke-width: 1.4px

