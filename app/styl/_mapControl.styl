.mapControl
  h2
    margin-bottom: 20px

.leaflet-container 
  a
    text-decoration: underline!important
  p
    margin: 2px 0px
  h2
    margin: 4px 0px
    font-weight: 800

#map 
  height: 700px
  margin-top: 10px  
  border-top: 1px solid darken($colBackground, 10%)
  border-bottom: 1px solid darken($colBackground, 10%)

  @media (max-width: 360px)
    height: 340px

  svg
    path
      fill: none
      stroke: #307090
      stroke-width: 2px

