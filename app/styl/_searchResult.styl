form

  label
    display: block
    margin-bottom: 10px

  .inputWrapper
    display: inline-block
    display: block
    padding: 10px 5px 10px 0

    transition-property: background-color
    transition-duration: 0.3s
    -webkit-transition-property: background-color
    -webkit-transition-duration: 0.3s

    &.populated
      background-color: lighten($colContrast, 80%)

    input
      border: 2px inset
      min-width: 255px
      width: 50%
      padding: 5px 5px 5px 10px

.searchResults
  margin: 0px 0 10px 0
  padding: 0
  min-height: 10px
  margin-bottom: 20px
  transition-property: margin-bottom
  transition-duration: 0.1s
  -webkit-transition-property: margin-bottom
  -webkit-transition-duration: 0.1s

  &.populated
    margin-bottom: 40px

  .schoolName
    display: inline
    cursor: pointer
    font-weight: 800

  ul
    list-style: none
    padding: 0
    margin: 0

    li
      padding: 10px 20px 10px 20px
      background-color: $colContrast
      color: white
      border-top: 1px solid lighten($colContrast, 5%)
      border-bottom: 1px solid darken($colContrast, 5%)
    li.missingDigit
      background-color: $colError
      color: white
      border-top: 1px solid lighten($colError, 5%)
      border-bottom: 1px solid darken($colError, 5%)
    li.notAnAddress
      background-color: $colBackground
      color: #666
      border-top: 1px solid lighten($colBackground, 5%)
      border-bottom: 1px solid darken($colBackground, 5%)

