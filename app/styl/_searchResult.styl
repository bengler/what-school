form

  label
    display: block
    margin-bottom: 10px

  .inputWrapper
    display: inline-block
    display: block
    padding: 10px 5px 10px 0

    transition-property: background-color
    transition-duration: 0.3s
    -webkit-transition-property: background-color
    -webkit-transition-duration: 0.3s

    &.populated
      background-color: lighten($colContrast, 80%)

    input
      border: 2px inset
      min-width: 255px
      width: 70%
      padding: 5px 5px 5px 10px

.searchResults
  margin: 0px 0 10px 0
  padding: 0
  min-height: 10px
  margin-bottom: 20px
  transition-property: margin-bottom
  transition-duration: 0.1s
  -webkit-transition-property: margin-bottom
  -webkit-transition-duration: 0.1s

  strong
    font-weight: 700

  &.populated
    margin-bottom: 40px

  .schoolName, .missingDigit .streetName
    display: inline-block
    cursor: pointer
    padding: 0px 0px
    height: 20px
    font-weight: 500

  ul
    list-style: none
    padding: 0
    margin: 0

    li
      padding: 10px 10px 10px 15px
      background-color: $colContrast
      color: $colContrastForeground
      border-top: 2px solid lighten($colContrast, 10%)
      border-bottom: 2px solid darken($colContrast, 7%)

      @media (min-width: $mobileBreakpoint)
        padding: 10px 20px 10px 30px

    li.missingDigit
      background-color: $colError
      color: $colContrastForeground
      border-top-color: lighten($colError, 10%)
      border-bottom-color: darken($colError, 7%)
    li.notAnAddress
      background-color: $colBackground
      color: $colForeground
      border-top-color: lighten($colBackground, 10%)
      border-bottom-color: darken($colBackground, 7%)

