// FONTS

body
  font-family: 'Lato', 'Helvetica Neue','Helvetica', sans-serif

h1, h2, h3, h4
  font-weight: 500
  margin: 0 0 10px 0

/* Text: */

h1
  font-family: Lato
  color: #026d99
  font-size: 45px
  line-height: 54px
  margin-left: 20px
  margin-top: 15px

h2
  font-size: 20px

label
  color: #666
  font-size: 14px

input
  font-size: 18px


@media (min-width: 400px)
  h1
    font-size: 54px
    line-height: 70px
    margin-top: 25px
  h2
    font-size: 30px

  label
    font-size: 20px

  input
    font-family: HelveticaNeue-Light, sans-serif
    font-size: 24px

  .searchResults
    font-size: 16px
