// FONTS

body
  font-family: 'Helveteica Neue','Helvetica','Roboto', sans-serif

h1, h2, h3, h4
  font-weight: 500
  margin-bottom: 10px
  color: #333



h1
  background-image: url(../images/letters.jpg)
  background-size: cover
  color: white
  margin: 0
  padding: 20px 20px 20px 20px
  font-size: 30px
  text-shadow: 0px 1.5px 0px #000
  font-weight: 300
  letter-spacing: -0.04em

@media (min-width: 400px)
  h1
    font-size: 50px
  h2
    font-size: 30px
