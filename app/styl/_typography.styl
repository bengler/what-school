// FONTS

body
  font-family: 'Helvetica Neue','Helvetica','Roboto', sans-serif

h1, h2, h3, h4
  font-weight: 500
  margin-bottom: 10px
  color: #333

/* Text: */


h1
  font-family: HelveticaNeue-Thin
  font-size: 45px
  color: #000000
  line-height: 54px
  margin-left: 20px
  margin-top: 15px

h2
  font-size: 20px

label
  color: #666
  font-size: 14px
  font-family: HelveticaNeue-Light, sans-serif

input
  font-family: HelveticaNeue-Light, sans-serif
  font-size: 18px

@media (min-width: 400px)
  h1
    font-size: 60px
    line-height: 70px
  h2
    font-size: 30px

