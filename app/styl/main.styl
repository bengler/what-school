// Useful mixins for CSS3 effects.
@import 'nib'

// Make browsers render HTML elements consistently.
@import 'normalize'


@import '_variables'
@import '_mixins'

@import '_typography'


body 
  margin: 0

  h1
    background-image: url(../images/letters.jpg)
    background-size: cover
    color: white
    margin: 0
    padding: 20px 20px 20px 20px
    font-size: 40px
    text-shadow: 0px 1.5px 0px #000

  .footer
    padding: 20px
    color: #888
    font-weight: 300
    a
      color: #444

  form
    input
      margin-top: 10px
      display: block
      font-size: 20px

    .searchResults
      display: none
      font-size: 12px
      overflow: scroll
      padding-top: 5px

      ul
        padding-left: 10px
        list-style: none

      ul li
        margin-bottom: 5px
        clear: both

        .heading
          margin: 5px 0px 5px 0px

        .streetSide
          width: 45%
          float: left

          ul
            padding: 0

            li
              padding: 5px 5px 5px 0px
              margin: 5px 5px 5px 0px
              background-color: #eee
              text-align: center

              .schoolName
                font-weight: bold
        
        .streetSide.odd
          ul
            border-right: 1px solid #ddd
  
        .streetSide.even
          margin-left: 5px



  .content
    padding-left: 20px

  #map 
    height: 500px

    @media (max-width: 320px)
      height: 300px

    .leaflet-container .leaflet-popup-content h2 
      font-size: 20px

  svg
    path
      fill: #fff
      fill-opacity: 0.1
      stroke: #048
      stroke-width: 1.5px
      // stroke-dasharray: 2,2
      // stroke-linejoin: round

    path:hover
      fill: #fff
      fill-opacity: 0.6

